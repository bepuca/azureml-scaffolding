// MD013 is for line length control
// For readability wrapping, tables and code blocks are excluded by default
{
    "config": {
      "MD013": {
        "tables": false,
        "code_blocks": false,
        "line_length": 80
      }
    },
    "showFound": false,
    "ignores": [
      "**/node_modules/**",
      ".github",
      ".venv",
      "tmp",
      "runs"
    ],
    "globs": ["**.md"]
}
